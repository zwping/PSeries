<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kt / java control"
        android:textSize="12dp" />

    <win.zwping.code.review.PProgressBar
        android:id="@+id/ppb1"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <win.zwping.code.review.PProgressBar
        android:id="@+id/ppb2"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp" />

    <win.zwping.code.review.PProgressBar
        android:id="@+id/ppb3"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />


    <include layout="@layout/child_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="attr"
        android:textSize="12dp" />

    <win.zwping.code.review.PProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:p_circle_color="#000" />

    <win.zwping.code.review.PProgressBar
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:progress="50"
        android:secondaryProgress="10"
        app:p_horizontal_background_color="#dedede"
        app:p_horizontal_progress_color="#0ff"
        app:p_horizontal_radius="5dp"
        app:p_horizontal_secondary_progress_color="#00f" />

</LinearLayout>